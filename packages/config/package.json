{
  "name": "@onepiece-chat/config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "eslint.js",
    "tailwind.config.js",
    "postcss.config.js",
    "prettier.config.js",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx,json,md}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx,json,md}\" --cache"
  },
  "dependencies": {
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "typescript": "^5.5.3"
  }
}
